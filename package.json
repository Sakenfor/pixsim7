{
  "name": "@pixsim7/workspace",
  "private": true,
  "version": "0.0.0",
  "workspaces": [
    "apps/*",
    "packages/*/*"
  ],
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "build": "pnpm -r build",
    "build:deps": "pnpm --filter @pixsim7/types build && pnpm --filter @pixsim7/ui build && pnpm --filter @pixsim7/game-core build && pnpm --filter @pixsim7/game-ui build && pnpm --filter @pixsim7/semantic-shapes build && pnpm --filter @pixsim7/scene-gizmos build",
    "build:plugin": "tsx scripts/build-plugin.ts",
    "build:plugins": "tsx scripts/build-plugin.ts --all",
    "build:android": "cd apps/pixsim7-android && gradlew.bat assembleDebug",
    "build:android:release": "cd apps/pixsim7-android && gradlew.bat assembleRelease",
    "install:android": "cd apps/pixsim7-android && adb install app/build/outputs/apk/debug/app-debug.apk",
    "openapi:gen": "tsx scripts/generate-openapi-types.ts",
    "openapi:check": "tsx scripts/generate-openapi-types.ts --check",
    "branded:gen": "tsx scripts/generate-branded-types.ts",
    "branded:check": "tsx scripts/generate-branded-types.ts --check",
    "composition-roles:gen": "tsx scripts/generate-composition-roles.ts",
    "composition-roles:check": "tsx scripts/generate-composition-roles.ts --check",
    "types:gen": "pnpm composition-roles:gen && pnpm openapi:gen && pnpm branded:gen",
    "types:check": "pnpm composition-roles:check && pnpm openapi:check && pnpm branded:check",
    "typecheck": "pnpm -r exec tsc --noEmit",
    "lint": "echo 'add lint script per package'",
    "generate-docs": "tsx packages/game-core/src/utils/generatePluginDocs.ts",
    "generate-registry-docs": "tsx scripts/generate-registry-docs.ts"
  },
  "devDependencies": {
    "esbuild": "^0.24.0",
    "openapi-typescript": "^7.10.1",
    "tsx": "^4.20.6",
    "yaml": "^2.8.0"
  }
}
