{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "types": ["vite/client"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": false,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@app/*": ["./src/app/*"],
      "@domain/*": ["./src/domain/*"],

      // Features
      "@features/hud/*": ["./src/features/hud/*"],
      "@features/hud": ["./src/features/hud/index.ts"],
      "@features/worldTools/*": ["./src/features/worldTools/*"],
      "@features/worldTools": ["./src/features/worldTools/index.ts"],
      "@features/graph/*": ["./src/features/graph/*"],
      "@features/graph": ["./src/features/graph/index.ts"],
      "@features/brainTools/*": ["./src/features/brainTools/*"],
      "@features/brainTools": ["./src/features/brainTools/index.ts"],
      "@features/simulation/*": ["./src/features/simulation/*"],
      "@features/simulation": ["./src/features/simulation/index.ts"],
      "@features/generation/*": ["./src/features/generation/*"],
      "@features/generation": ["./src/features/generation/index.ts"],
      "@features/intimacy": ["./src/features/intimacy/index.ts"],
      "@features/prompts": ["./src/features/prompts/index.ts"],
      "@features/scene": ["./src/features/scene/index.ts"],
      "@features/gallery/*": ["./src/features/gallery/*"],
      "@features/gallery": ["./src/features/gallery/index.ts"],
      "@features/automation/*": ["./src/features/automation/*"],
      "@features/automation": ["./src/features/automation/index.ts"],
      "@features/interactions/*": ["./src/features/interactions/*"],
      "@features/interactions": ["./src/features/interactions/index.ts"],
      "@features/gizmos/*": ["./src/features/gizmos/*"],
      "@features/gizmos": ["./src/features/gizmos/index.ts"],
      "@features/controlCenter/*": ["./src/features/controlCenter/*"],
      "@features/controlCenter": ["./src/features/controlCenter/index.ts"],
      "@features/devtools/*": ["./src/features/devtools/*"],
      "@features/devtools": ["./src/features/devtools/index.ts"],
      "@features/narrative": ["./src/features/narrative/index.ts"],
      "@features/workspace/*": ["./src/features/workspace/*"],
      "@features/workspace": ["./src/features/workspace/index.ts"],
      "@features/panels/*": ["./src/features/panels/*"],
      "@features/panels": ["./src/features/panels/index.ts"],
      "@features/contextHub/*": ["./src/features/contextHub/*"],
      "@features/contextHub": ["./src/features/contextHub/index.ts"],
      "@features/componentSettings/*": ["./src/features/componentSettings/*"],
      "@features/componentSettings": ["./src/features/componentSettings/index.ts"],
      "@features/settings": ["./src/features/settings/index.ts"],
      "@features/npcs/*": ["./src/features/npcs/*"],
      "@features/npcs": ["./src/features/npcs/index.ts"],
      "@features/plugins/*": ["./src/features/plugins/*"],
      "@features/plugins": ["./src/features/plugins/index.ts"],
      "@features/assets/*": ["./src/features/assets/*"],
      "@features/assets": ["./src/features/assets/index.ts"],
      "@features/preview/*": ["./src/features/preview/*"],
      "@features/preview": ["./src/features/preview/index.ts"],
      "@features/cubes/*": ["./src/features/cubes/*"],
      "@features/cubes": ["./src/features/cubes/index.ts"],
      "@features/mediaViewer/*": ["./src/features/mediaViewer/*"],
      "@features/mediaViewer": ["./src/features/mediaViewer/index.ts"],
      "@features/poseBoard/*": ["./src/features/poseBoard/*"],
      "@features/poseBoard": ["./src/features/poseBoard/index.ts"],
      "@features/scene3d/*": ["./src/features/scene3d/*"],
      "@features/scene3d": ["./src/features/scene3d/index.ts"],
      "@features/sceneComposer3d": ["./src/features/sceneComposer3d/index.ts"],
      "@features/scenePreview3d": ["./src/features/scenePreview3d/index.ts"],

      // Lib - Core registries & systems
      "@lib/core": ["./src/lib/core/index.ts"],
      "@lib/core/*": ["./src/lib/core/*"],
      "@lib/shapes": ["./src/lib/shapes/index.ts"],
      "@lib/api": ["./src/lib/api/index.ts"],
      "@lib/api/*": ["./src/lib/api/*"],

      // Lib - UI (consolidated)
      "@lib/ui": ["./src/lib/ui/index.ts"],
      "@lib/ui/panels": ["./src/features/panels/lib/index.ts"],
      "@lib/ui/composer": ["./src/lib/ui/composer/index.ts"],
      "@lib/ui/overlay": ["./src/lib/ui/overlay/index.ts"],
      "@lib/ui/display": ["./src/lib/ui/display/index.ts"],

      // Lib - Editing
      "@lib/editing-core": ["./src/lib/editing-core/index.ts"],

      // Lib - Infrastructure (Phase 1 & 3)
      "@lib/utils": ["./src/lib/utils/index.ts"],
      "@lib/utils/*": ["./src/lib/utils/*"],
      "@lib/auth": ["./src/lib/auth/index.ts"],
      "@lib/theming": ["./src/lib/theming/index.ts"],
      "@lib/game": ["./src/lib/game/index.ts"],
      "@lib/game/*": ["./src/lib/game/*"],
      "@lib/analyzers": ["./src/lib/analyzers/index.ts"],
      "@lib/assets": ["./src/lib/assets/index.ts"],
      "@lib/capabilities": ["./src/lib/capabilities/index.ts"],
      "@lib/capabilities/*": ["./src/lib/capabilities/*"],
      "@lib/context": ["./src/lib/context/index.ts"],
      "@lib/dev": ["./src/lib/dev/index.ts"],
      "@lib/dev/*": ["./src/lib/dev/*"],
      "@lib/dockview": ["./src/lib/dockview/index.ts"],
      "@lib/models": ["./src/lib/models/index.ts"],
      "@lib/models/*": ["./src/lib/models/*"],
      "@lib/plugins": ["./src/lib/plugins/index.ts"],
      "@lib/plugins/*": ["./src/lib/plugins/*"],
      "@lib/widgets": ["./src/lib/widgets/index.ts"],
      "@lib/widgets/*": ["./src/lib/widgets/*"],
      "@lib/registries": ["./src/lib/registries.ts"],
      "@lib/backendStorage": ["./src/lib/backendStorage.ts"],
      "@lib/assetUrlResolver": ["./src/lib/assetUrlResolver.ts"],

      // Packages
      "@pixsim7/types": ["../packages/types/dist"],
      "@pixsim7/shared.helpers-core": ["../../packages/shared/helpers-core/src"],
      "@pixsim7/core.composer": ["../../packages/core/composer/src"],
      "@shared/types": ["../../packages/shared/types/src"],
      "@shared/types/*": ["../../packages/shared/types/src/*"]
    },

    /* Linting */
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "erasableSyntaxOnly": false,
    "noFallthroughCasesInSwitch": false,
    "noUncheckedSideEffectImports": false
  },
  "include": ["src"]
}
