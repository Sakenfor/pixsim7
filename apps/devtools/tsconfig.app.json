{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "types": ["vite/client"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": false,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "../main",
    "paths": {
      "@/*": ["./src/*"],
      "@devtools/*": ["../devtools/src/*"],
      "@devtools": ["../devtools/src/main.tsx"],
      "@app/*": ["./src/app/*"],
      "@domain/*": ["./src/domain/*"],
      "@features/*": ["./src/features/*"],
      "@lib/*": ["./src/lib/*"],
      "@shared/types": ["../../packages/shared/types/src"],
      "@shared/types/*": ["../../packages/shared/types/src/*"],
      "@pixsim7/types": ["../../packages/types/dist"],
      "@pixsim7/shared.auth": ["../../packages/shared/auth/src"],
      "@pixsim7/shared.helpers.core": ["../../packages/shared/helpers-core/src"],
      "@pixsim7/core.composer": ["../../packages/core/composer/src"]
    },

    /* Linting */
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "erasableSyntaxOnly": false,
    "noFallthroughCasesInSwitch": false,
    "noUncheckedSideEffectImports": false
  },
  "include": ["src"]
}
