{
  "name": "@pixsim7/frontend.game",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview"
  },
  "dependencies": {
    "@babylonjs/core": "^8.38.0",
    "@babylonjs/loaders": "^8.38.0",
    "@pixsim7/game.components": "workspace:*",
    "@pixsim7/shared.types": "workspace:*",
    "@pixsim7/shared.ui": "workspace:*",
    "babylonjs": "^7.42.0",
    "babylonjs-gltf2interface": "8.0.0",
    "babylonjs-loaders": "^7.42.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@pixsim7/shared.config": "workspace:*",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.1.0",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.14",
    "typescript": "~5.9.3",
    "vite": "^7.2.2"
  },
  "pixsim": {
    "service": {
      "id": "game_frontend",
      "type": "frontend",
      "name": "Game Frontend",
      "description": "React game interface",
      "directory": "apps/game",
      "command": "pnpm",
      "args": ["dev", "--port"],
      "port_env": "GAME_FRONTEND_PORT",
      "default_port": 5175,
      "base_url_env": "GAME_FRONTEND_BASE_URL",
      "subdomain": "game",
      "env_overrides": {
        "VITE_BACKEND_URL": "$BACKEND_BASE_URL"
      },
      "auto_start": false,
      "enabled": true
    }
  }
}
