  "templates": {
    "vampire_hypnotic_seduction": {
      "name": "Vampire Hypnotic Seduction Template",
      "template": "{{character}} {{initial_state}}, {{mental_state}}. {{vampire_description}} materializes {{appearance_style}}. {{hypnotic_action}} creating {{effect_description}}. {{character}} {{character_response}} as {{escalation}}. Camera {{camera_movement}} capturing {{focus_element}}. {{consistency_note}}.",
