# PixSim7 Environment Configuration
# Copy this to .env and update with your values

# Database
DATABASE_URL=postgresql://pixsim:pixsim123@localhost:5433/pixsim7

# Redis
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=change-this-to-a-random-string-in-production

# CORS (comma-separated list or "*" for all origins)
CORS_ORIGINS=http://localhost:5173,http://localhost:8000

# App
DEBUG=true
LOG_LEVEL=INFO

# Storage
STORAGE_BASE_PATH=./storage

# Provider Settings
PIXVERSE_TIMEOUT=300
PROVIDER_POLL_INTERVAL=10

# LLM / AI Settings
# Anthropic API key for Claude (required for AI features)
ANTHROPIC_API_KEY=sk-ant-...

# OpenAI API key (optional, for GPT models)
# OPENAI_API_KEY=sk-...

# Default LLM provider (anthropic, openai, local)
LLM_PROVIDER=anthropic

# Default model (optional, uses provider default if not set)
# LLM_DEFAULT_MODEL=claude-sonnet-4-20250514

# Cache settings
LLM_CACHE_ENABLED=true
LLM_CACHE_TTL=3600
LLM_CACHE_FRESHNESS=0.0

# Limits
MAX_JOBS_PER_USER=10
MAX_ACCOUNTS_PER_USER=5

# Worker Settings
ARQ_MAX_JOBS=10
ARQ_JOB_TIMEOUT=3600
ARQ_MAX_TRIES=3
