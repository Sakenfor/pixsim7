{
  "name": "@pixsim7/game.engine",
  "version": "0.0.1",
  "private": true,
  "main": "src/index.ts",
  "module": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "require": "./src/index.ts",
      "types": "./src/index.ts"
    },
    "./*": {
      "import": "./src/*.ts",
      "require": "./src/*.ts",
      "types": "./src/*.ts"
    }
  },
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsc -p tsconfig.json --watch",
    "harness": "tsx dev/harness.ts",
    "demo": "tsx demo.ts",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@pixsim7/core.brain": "workspace:*",
    "@pixsim7/core.links": "workspace:*",
    "@pixsim7/core.stats": "workspace:*",
    "@pixsim7/shared.content-rating": "workspace:*",
    "@pixsim7/shared.helpers.core": "workspace:*",
    "@pixsim7/shared.ref.core": "workspace:*",
    "@pixsim7/shared.types": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "tsx": "^4.20.6",
    "typescript": "^5.4.0",
    "vitest": "^1.0.0"
  }
}
