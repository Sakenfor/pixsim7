{
  "name": "@pixsim7/api-client",
  "version": "0.0.1",
  "private": true,
  "description": "Environment-neutral API client for PixSim7 (browser, Node, Electron, Tauri)",
  "main": "src/index.ts",
  "module": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "require": "./src/index.ts",
      "types": "./src/index.ts"
    },
    "./domains": {
      "import": "./src/domains/index.ts",
      "require": "./src/domains/index.ts",
      "types": "./src/domains/index.ts"
    },
    "./browser": {
      "import": "./src/browser/index.ts",
      "require": "./src/browser/index.ts",
      "types": "./src/browser/index.ts"
    }
  },
  "files": ["src", "dist"],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "axios": "^1.6.0"
  },
  "dependencies": {
    "@pixsim7/shared.types": "workspace:*"
  },
  "devDependencies": {
    "axios": "^1.6.0",
    "typescript": "^5.4.0"
  }
}
