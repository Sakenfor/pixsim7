{
  "manifest_version": 3,
  "name": "PixSim7 Extension",
  "version": "1.0.0",
  "description": "Provider-agnostic video generation assistant for PixSim7",
  "permissions": [
    "cookies",
    "storage",
    "tabs",
    "activeTab",
    "webRequest",
    "contextMenus",
    "scripting"
  ],
  "host_permissions": [
    "*://*/*",
    "http://localhost:8001/*",
    "http://10.243.48.125:8001/*",
    "http://10.243.*.*:8001/*",
    "http://localhost:5173/*",
    "http://10.243.*.*:5173/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*",
        "file://*/*"
      ],
      "js": [
        "emojis.js",
        "image-badges.js"
      ],
      "run_at": "document_idle",
      "all_frames": true
    },
    {
      "matches": [
        "*://*.pixverse.ai/*",
        "*://*.runwayml.com/*",
        "*://*.pika.art/*",
        "*://sora.chatgpt.com/*",
        "*://chatgpt.com/*"
      ],
      "js": [
        "shared/constants.js",
        "content/utils.js",
        "content/url-monitor.js",
        "content/cookie-import.js",
        "content/auth-monitor.js",
        "content/main.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "*://*.pixverse.ai/*"
      ],
      "js": [
        "content/pixverse-styles.js",
        "content/pixverse-dialogs.js",
        "content/pixverse-utils.js",
        "content/pixverse-storage.js",
        "content/pixverse-upload-utils.js",
        "content/pixverse-image-grid.js",
        "content/pixverse-recently-used.js",
        "content/pixverse-image-picker.js",
        "content/pixverse-preset-buttons.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "injected-bearer-capture.js",
        "injected-upload-interceptor.js"
      ],
      "matches": [
        "*://*/*"
      ]
    }
  ]
}